<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawingCacheQuality="high"
    app:barrierMargin="25dp"

    tools:context=".toolBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawingCacheQuality="high"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageButton
            android:id="@+id/Home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home_button_inactive"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageButton
            android:id="@+id/Fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Fav"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/fav_button_inactive"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageButton
            android:id="@+id/Search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Search"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/search_button_inactive"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageButton
            android:id="@+id/Menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu_button_inactive"
            tools:ignore="ContentDescription,HardcodedText" />
    </LinearLayout>
</FrameLayout>